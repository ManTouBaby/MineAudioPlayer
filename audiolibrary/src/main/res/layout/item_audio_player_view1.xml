<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_music_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:text="00:00"
        android:layout_marginTop="3dp"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/tv_music_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/iv_music_pause"
        android:text="10:20"
        android:layout_marginTop="3dp"
        android:textColor="#ffffff" />

    <SeekBar
        android:id="@+id/sb_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/tv_music_current"
        android:layout_toLeftOf="@+id/iv_music_pause" />

    <ImageView
        android:id="@+id/iv_music_pause"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="3dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/seach_btn_pause" />
</RelativeLayout>